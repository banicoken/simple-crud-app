<div class="row">
  <div class="col-sm-10 offset-sm-1 col-md-6 offset-md-3">
    <h1 class="text-info">Jenns PA Manager</h1>
    <br>
    <br>
    <h2>All Reminders</h2>
    <hr>
  </div>
</div>
<br>


<% @posts.each do |post| %>
  <div class="row">
    <div class="col-sm-10 offset-sm-1 col-md-6 offset-md-3">
      <div class="card-deck mb-3">
        <div class="card mb-4 box-shadow">
          <div class="card-header bg-info text-white">
            <h4 class="my-0 font-weight-normal">Name</h4>
            <br>
            <p><%= post.title %></p>
          </div>
          <div class="card-body">
            <h1 class="card-title pricing-card-title">Description</h1>
            <ul class="list-unstyled mt-3 mb-4">

              <li><p><%= post.content.gsub(/\n/, '<br>').html_safe %></p></li>
            </ul>
            <br>
            <%= link_to "Edit", edit_post_path(post), class: "btn btn-success" %>
            <%= link_to "Delete", post_path(post), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
          </div>
        </div>
    </div>
    </div>
  </div>

<% end %>
